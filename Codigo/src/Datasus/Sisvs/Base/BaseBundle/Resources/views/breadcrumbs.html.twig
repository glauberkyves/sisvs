{% if breadcrumbs|length %}
    <ul id="xi-breadcrumbs" class="breadcrumb">
        {% for bc in breadcrumbs %}
            {% if loop.last or not bc.url %}
                <li>{{ bc.label|trans }}</li>
            {% else %}
                <li><a href="{{ bc.url }}">{{ bc.label|trans }}</a><span class="divider">/</span></li>
            {% endif %}
        {% endfor %}
    </ul>
{% endif %}
